# Basic Sway Configuration
set $mod Mod1

default_border none
default_floating_border none
focus_follows_mouse no

swaybg_command -

output Virtual-1 {
    mode 1920x1080
    transform 90
    bg #ffffff solid_color
}

exec --no-startup-id /opt/stream-viewer

for_window [app_id="mpv"] {
    floating enable
    sticky enable
}