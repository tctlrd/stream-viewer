# Basic Sway Configuration
set $mod Mod4

swaybg_command -
default_border none
default_floating_border none

output Virtual-1 {
    mode 1920x1080
    transform 90
}

# Stream viewer window rules with explicit positioning
for_window [title="camera1"] {
    floating enable
    sticky enable
    move position 0 0
    resize set height 540
}

for_window [title="camera2"] {
    floating enable
    sticky enable
    move position 0 320
    resize set height 540
}

for_window [title="camera3"] {
    floating enable
    sticky enable
    move position 0 640
    resize set height 540
}

for_window [title="camera4"] {
    floating enable
    sticky enable
    move position 0 960
    resize set height 540
}

# Start stream viewer
exec_always --no-startup-id /opt/stream-viewer
#exec /opt/stream-viewer