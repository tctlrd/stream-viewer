# Basic Sway Configuration
set $mod Mod1

default_border none
default_floating_border none
focus_follows_mouse no

#swaybg_command -

output Virtual-1 {
    mode 1920x1080
    transform 90
    bg #ffffff solid_color
}

mark left
mark right

for_window [title="camera1"] {
    move window to mark left
#    floating enable
#    sticky enable
#    move position 0 0
#    resize set 540
}

for_window [title="camera2"] {
    layout splith
    move window to mark left
#    floating enable
#    sticky enable
#    move position 0 320
#    resize set 540
}

for_window [title="camera3"] {
    move window to mark right
#    floating enable
#    sticky enable
#    move position 0 640
#    resize set 540
}

for_window [title="camera4"] {
    layout splith
    move window to mark right
#    floating enable
#    sticky enable
#    move position 0 960
#    resize set 540
}

# Start stream viewer
exec_always --no-startup-id /opt/stream-viewer
