# Basic Sway Configuration
set $mod Mod1

default_border none
default_floating_border none
focus_follows_mouse no

#swaybg_command -

output Virtual-1 {
    mode 1920x1080
    transform 90
    bg #ffffff solid_color
}

exec_always --no-startup-id /opt/stream-viewer

for_window [app_id="mpv"] {
    floating enable
    sticky enable
}

for_window [title="camera1"] {
    resize set 540
    move position 0 0
}

for_window [title="camera2"] {
    resize set 540
    move position 540 0
}

for_window [title="camera3"] {
    resize set 540
    move position 0 640
}

for_window [title="camera4"] {
    resize set 540
    move position 540 640
}