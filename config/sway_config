# Basic Sway Configuration
set $mod Mod1

#default_border none
#default_floating_border none
focus_follows_mouse no

#swaybg_command -

output Virtual-1 {
    mode 1920x1080
    transform 90
    bg #ffffff solid_color
}

for_window [title="camera1"] {
    floating enable
    sticky enable
    resize set 540
    move position 0 0
}

for_window [title="camera2"] {
    floating enable
    sticky enable
    resize set 540
    move position 0 320
}

for_window [title="camera3"] {
    floating enable
    sticky enable
    resize set 540
    move position 0 640
}

for_window [title="camera4"] {
    floating enable
    sticky enable
    resize set 540
    move position 0 960
}

# Start stream viewer
exec_always --no-startup-id /opt/stream-viewer
#exec /opt/stream-viewer